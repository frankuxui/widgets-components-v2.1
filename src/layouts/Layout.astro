	<body>
		<section class="container">
			<header class="">
				<input type="checkbox" id="theme-toggle" />
				<label for="theme-toggle">Toggle theme</label>
				<ul class="flex items-center justify-start mt-8 gap-2 flex-wrap">
					{
						data.map((item) => {
							return (
								<li>
									<a 
										href={`/categories/${item.slug}`}
										class="flex items-center justify-center px-4 h-9 uppercase font-medium text-xs tracking-wider rounded-sm transition-colors duration-200"
										class:list={{
											'bg-gray-200 hover:bg-gray-300 hover:text-black text-gray-800 dark:bg-gray-800 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white': pageSlug !== item.slug,
											'bg-gray-900 hover:bg-gray-800 text-white dark:bg-white dark:text-black dark:hover:bg-white': pageSlug === item.slug
										}}
										>
										{item.category}
