---
interface Props {
	title: string;
}

const { title } = Astro.props;

let pages = []
pages = await Astro.glob('../pages/categories/*.md')
const data = pages.map((item) => {
	
	const { 
		category, 
		title, 
		slug, 
		tags 
	} = item.frontmatter

	return {
		category,
		title,
		slug,
		tags
	}
})

const pageSlug = Astro.url.pathname.split('/')[2]

